{
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "parserOptions": { 
        "ecmaVersion": 2020,
        "sourceType": "module"
    }, 
    "rules": {
        "linebreak-style": "off",
        "arrow-body-style": [
            "error",
            "as-needed"
        ],
        "strict": "off",
        "no-console": "off",
        "no-bitwise": "off",
        "valid-jsdoc": 2,
        "import/no-extraneous-dependencies": 0,
        "import/extensions": ["off"],
        "no-undef": 1,
        "no-unused-vars": 1,
        "comma-dangle": ["error", {
            "arrays": "always-multiline",
            "objects": "always-multiline",
            "imports": "always-multiline",
            "exports": "always-multiline",
            "functions": "ignore"
        }]
    },
    "plugins": [
        "import"
    ],
    "env": {
        "es2020":true,
        "es6": true,
        "browser": true,
        "node": true,
        "jasmine": true,
        "jest": true
    }
}
